{% extends "includes/base.twig" %}
{% block contenu %}
    <article id="contenu">
        <form method="post" action="?page=entreprise&action=ajouter">
            <table class="list">
                <thead>
                    <tr>
                        <th colspan="2">Information</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Nom de l'entreprise* :</td>
                        <td>
                            <fieldset><input type="text" name="nom_entreprise" required></fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td>Nom du contact :</td>
                        <td>
                            <fieldset><input type="text" name="nom_contact"></fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td>Nom du responsable :</td>
                        <td>
                            <fieldset><input type="text" name="nom_responsable"></fieldset>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br>
            <table class="list">
                <thead>
                <tr>
                    <th colspan="2">Contact</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Rue* :</td>
                    <td>
                        <fieldset><input type="text" name="rue" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Code postal* :</td>
                    <td>
                        <fieldset><input type="number" name="code_postal" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Ville* :</td>
                    <td>
                        <fieldset><input type="text" name="ville" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Téléphone* :</td>
                    <td>
                        <fieldset><input type="tel" name="telephone" pattern="^0[1-9]([ \-]?[0-9]{2}){4}$" placeholder="0X XX XX XX XX" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Fax :</td>
                    <td>
                        <fieldset><input type="tel" name="fax" pattern="^0[1-9]([ \-]?[0-9]{2}){4}$" placeholder="0X XX XX XX XX"></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Email :</td>
                    <td>
                        <fieldset><input type="email" name="email"></fieldset>
                    </td>
                </tr>
                </tbody>
            </table>
            <br>
            <table class="list">
                <thead>
                <tr>
                    <th colspan="2">Divers</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Observation :</td>
                    <td>
                        <fieldset><textarea name="observation"></textarea></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Url du site :</td>
                    <td>
                        <fieldset><input type="url" name="url"></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Niveau* :</td>
                    <td>
                        <fieldset><input type="text" name="niveau" required></fieldset>
                    </td>
                </tr>
                </tbody>
            </table>
            <br>
            <table class="list">
                <thead>
                <tr>
                    <th colspan="2">Spécialité</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Spécialité :</td>
                    <td>
                        <select multiple name="specialite">
                            <option value="SLAM">SLAM</option>
                            <option value="SISR">SISR</option>
                            <option value="AM">AM</option>
                            <option value="SN">SN</option>
                            <option value="CG">CG</option>
                            <option value="NRC">NRC</option>
                        </select>
                    </td>
                </tr>
                </tbody>
            </table>
            <br>
            <div class="aide">
                <a>Les champs comportant le symbole * sont obligatoires</a>
            </div>
            <br>
            <input type="submit" value="Créer">
            <input type="reset" value="Reset">
        </form>
    </article>
{% endblock %}