{% extends "includes/base.twig" %}
{% block contenu %}
    <header>
        <h1>{{ entreprise.raison_sociale }}</h1>
        <hr>
    </header>
    <article id="contenu">
        <h1>Entrée</h1>
        <div class="deux_colonnes">
            <div class="information">
                <h3>Information</h3>
                <strong>Nom de l'entreprise</strong> : {{ entreprise.raison_sociale }}<br>
                <strong>Nom du contact</strong> : {{ entreprise.nom_contact }}<br>
                <strong>Nom du responsable</strong> : {{ entreprise.nom_resp }}
            </div>
            <div class="information">
                <h3>Contact</h3>
                <strong>Rue</strong> : {{ entreprise.rue_entreprise }}<br>
                <strong>Code postal</strong> : {{ entreprise.cp_entreprise }}<br>
                <strong>Ville</strong> : {{ entreprise.ville_entreprise }}<br>
                <strong>Téléphone</strong> : {{ entreprise.tel_entreprise }}<br>
                <strong>Fax</strong> : {{ entreprise.fax_entreprise }}<br>
                <strong>Email</strong> : {{ entreprise.email }}
            </div>
        </div>
        <div class="deux_colonnes">
            <div class="information">
                <h3>Divers</h3>
                <strong>Observation</strong> : {{ entreprise.observation }}<br>
                <strong>Url du site</strong> : {{ entreprise.site_entreprise }}<br>
                <strong>Niveau</strong> : {{ entreprise.niveau }}<br>
                <strong>Spécialité</strong> :
                {% for spe in entreprise.specialite %}
                    {{ spe }}
                {% endfor %}
            </div>
        </div>
        <hr>
        <h1>Stage</h1>
        <table class="list">
            <thead>
            <tr>
                <th><span class="center">Opération</span></th>
                <th><span class="center">Étudiant</span></th>
                <th><span class="center">Projet</span></th>
            </tr>
            </thead>
            <tbody>
            {% for stage in stages %}
                <tr>
                    <td>
                        <div class="bouton_operation center">
                            <a href="?page=stagiaire&action=voir&id={{ stage.num_etudiant }}" class="icon_voir"></a>
                            <a href="?page=inscription&action=modifier&id={{ stage.num_stage }}" class="icon_modifier"></a>
                            <a href="?page=stagiaire&action=supprimer_stage&id={{ stage.num_stage }}" class="icon_supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce stage ?')"></a>
                        </div>
                    </td>
                    <td>{{ stage.nom_etudiant }} {{ stage.prenom_etudiant }}</td>
                    <td>{{ stage.desc_projet|replace({'</br>': '<br>'})|raw }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </article>
{% endblock %}