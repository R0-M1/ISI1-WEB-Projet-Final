{% extends "includes/base.twig" %}
{% block contenu %}
    <article id="contenu">
        <form method="post" action="?page=stagiaire&action={{ etudiant is not null ? 'modifier_etu&id=' ~ etudiant.num_etudiant : 'ajouter' }}">
            <table class="list">
                <thead>
                <tr>
                    <th colspan="2">Information concernant l'étudiant</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Nom* :</td>
                    <td>
                        <fieldset><input type="text" name="nom_etudiant" value="{{ etudiant.nom_etudiant }}" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Prénom* :</td>
                    <td>
                        <fieldset><input type="text" name="prenom_etudiant" value="{{ etudiant.prenom_etudiant }}" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Nom d'utilisateur (8 caractères)* :</td>
                    <td>
                        <fieldset><input type="text" name="login" value="{{ etudiant.login }}" minlength="8" maxlength="8" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Mot de passe (entre 8 et 30 caractères)* :</td>
                    <td>
                        <fieldset><input type="text" name="mdp" value="{{ etudiant.mdp }}" minlength="8" maxlength="30" required></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Année d'obtention du diplome :</td>
                    <td>
                        <fieldset><input type="date" name="annee_obtention" value="{{ etudiant.annee_obtention }}"></fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Classe* :</td>
                    <td>
                        <select name="classe" required>
                            {% for classe in classes %}
                            <option value="{{ classe.nom_classe }}" {% if classe.nom_classe in etudiant.nom_classe %}selected{% endif %}>{{ classe.nom_classe }}</option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>
                </tbody>
            </table>
            <br>
            <div class="aide">
                <a>Les champs comportant le symbole * sont obligatoires</a>
            </div>
            <br>
            <input type="submit" value="{{ etudiant is not null ? 'Modifier' : 'Créer' }}">
            <input type="reset" value="Reset">
        </form>
    </article>
{% endblock %}